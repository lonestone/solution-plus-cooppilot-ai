{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@common/*": [
        "../../../base/apps/common/src/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  }
}